<%- include('../includes/head.ejs') %>

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="w-[75%] mx-auto md:w-[65%] lg-[55%] xl:w-[40%] mt-3 relative">
    <div class="flex flex-col justify-center">

      <div class="flex flex-col gap-5 mt-5 md:flex-row">
        <div class="space-y-5 md:flex-1">        
          <form action="/reset/<%= passwordToken %>" method="POST" class="space-y-5">
            <div class="flex flex-col space-y-1">
              <label for="password" class="text-sm font-semibold">Password*</label>
              <input type="password" name="password" id="password" class="border border-gray-400 h-14 rounded-lg outline-2 outline-transparent pl-4 text-lg placeholder:text-base text-gray-500 focus:outline-2 focus:outline-[#0052FF]" placeholder="Enter new password" required style="transition: outline 0.7s ease-in-out">
            </div>

             <input type="hidden" name="userId" value="<%= userId %>" />
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <button class="border border-[#0052FF] rounded-full w-full h-14 bg-[#0052FF] text-white text-lg font-semibold hover:shadow-2xl hover:-translate-y-[0.1rem]">Update password</button>
          </form>
        </div>
      </div>
    </div>
    </main>
<%- include('../includes/end.ejs') %>
